<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="horizontal"
    android:showDividers="beginning">

    <LinearLayout
        android:id="@+id/id_tab_kebiao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_tab_iv_kebiao"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="3dp"
            android:contentDescription="课表"
            app:srcCompat="@drawable/bottom_iv_kebiao" />

        <TextView
            android:id="@+id/id_tab_tv_kebiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text="课表"
            android:textColor="#9A9A9A"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_school"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_tab_iv_school"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="3dp"
            android:contentDescription="论坛"
            app:srcCompat="@drawable/bottom_iv_bbs" />

        <TextView
            android:id="@+id/id_tab_tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text="论坛"
            android:textColor="#9A9A9A"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_find"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_tab_iv_find"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="3dp"
            android:contentDescription="发现"
            app:srcCompat="@drawable/bottom_iv_find" />

        <TextView
            android:id="@+id/id_tab_tv_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text="发现"
            android:textColor="#9A9A9A"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_me"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/id_tab_iv_me"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="3dp"
            android:contentDescription="我"
            android:src="@drawable/bottom_iv_me" />

        <TextView
            android:id="@+id/id_tab_tv_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text="我"
            android:textColor="#9A9A9A"
            android:textSize="10dp" />
    </LinearLayout>

</LinearLayout>